{
  "extends": ["airbnb-base", "plugin:node/recommended"],
  "plugins": ["node"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "parser": "@babel/eslint-parser",
  "rules": {
    "func-names": 0,
    "no-nested-ternary": 0
  },
  "overrides": [
      {
          "files": ["test/**/*.js"],
          "extends": ["plugin:mocha/recommended"],
          "plugins": ["mocha"],
          "env": {
              "mocha": true
          },
          "rules": {
            "mocha/no-mocha-arrows": 0,
            "import/no-extraneous-dependencies": [2, {"devDependencies": true}]
          }
      }
  ]
}
